# layout settings
yabai -m config layout          bsp
yabai -m config window_placeent second_child

# window settings
yabai -m config top_padding                  16
yabai -m config bottom_padding               16
yabai -m config left_padding                 20
yabai -m config right_padding                20
yabai -m config window_gap                   06

# mouse settings
yabai -m config mouse_follows_focus on

# disable apps
yabai -m rule --add app="^System Settings$" manage=off
yabai -m rule --add app="^Archive Utility$" manage=off
yabai -m rule --add app="^Calculator$" manage=off
yabai -m rule --add app="^Dictionary$" manage=off
yabai -m rule --add app="^Finder$" manage=off
yabai -m rule --add app="^LICEcap$" manage=off
yabai -m rule --add app="^licecap$" manage=off
yabai -m rule --add app="^MacDown$" manage=off
yabai -m rule --add app="^FortiClient$" manage=off

# re-enable window borders!
borders active_color=0xffff3050 inactive_color=0xffaaaaaa width=6.0 &
